{
  "name": "amrikyy",
  "version": "1.0.0",
  "description": "Amrikyy - Advanced AI-Powered Automation & Workflow Platform",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "tsx --tsconfig tsconfig.json -r tsconfig-paths/register server/index.ts",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "preview": "npm run build && firebase serve",
    "dev:preview": "cross-env PORT=9002 NODE_ENV=development tsx server/index.ts",
    "mcp-server": "tsx server/mcp-server.ts",
    "test:cursor-cli": "node test-cursor-cli-mcp.cjs",
    "test:mcp-tools": "node test-mcp-tools.cjs",
    "test:comprehensive": "node test-comprehensive-mcp-tools.cjs",
    "test:zentixai": "node test-zentixai-mcp-tools.cjs",
    "cli": "tsx cli.ts",
    "cli:status": "tsx cli.ts status",
    "cli:interactive": "tsx cli.ts interactive",
    "cli:demo": "tsx cli.ts demo",
    "cli:monitor": "tsx cli.ts monitor",
    "learning:loop": "cross-env ENABLE_CONTINUOUS_LEARNING=true tsx scripts/run-learning-loop.ts"
  },
