    "{\n",
    " \"cells\": [\n",
    "  {\n",
    "   \"cell_type\": \"markdown\",\n",
    "   \"metadata\": {},\n",
    "   \"source\": [\n",
    "    \"# Learning Loop Example (Google Colab)\\n\",\n",
    "    \"\\n\",\n",
    "    \"هذا المثال يحاكي منطق حلقة التعلم المستمر (learning loop) كما في AuraOS،\\n\",\n",
    "    \"مع نموذج توصية بسيط وتسجيل heartbeat في كل دورة.\\n\",\n",
    "    \"يمكنك تشغيله مباشرة على Google Colab.\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"outputs\": [],\n",
    "   \"source\": [\n",
    "    \"import numpy as np\\n\",\n",
    "    \"import pandas as pd\\n\",\n",
    "    \"from sklearn.neighbors import NearestNeighbors\\n\",\n",
    "    \"import random, time\\n\",\n",
    "    \"\\n\",\n",
    "    \"# بيانات المستخدمين والميزات\\n\",\n",
    "    \"users = ['user1', 'user2', 'user3']\\n\",\n",
    "    \"features = ['math', 'ai', 'python', 'writing', 'design']\\n\",\n",
    "    \"\\n\",\n",
    "    \"# مصفوفة تفاعل المستخدمين مع الميزات\\n\",\n",
    "    \"data = pd.DataFrame(np.random.randint(0, 10, (len(users), len(features))), columns=features, index=users)\\n\",\n",
    "    \"print('بيانات التفاعل الأولية:')\\n\",\n",
    "    \"display(data)\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"outputs\": [],\n",
    "   \"source\": [\n",
    "    \"# نموذج توصية بسيط\\n\",\n",
    "    \"def get_recommendations(user_id, data, n=2):\\n\",\n",
    "    \"    model = NearestNeighbors(n_neighbors=n+1, metric='euclidean')\\n\",\n",
    "    \"    model.fit(data.values)\\n\",\n",
    "    \"    idx = data.index.get_loc(user_id)\\n\",\n",
    "    \"    dists, indices = model.kneighbors([data.loc[user_id].values])\\n\",\n",
    "    \"    # استبعاد المستخدم نفسه\\n\",\n",
    "    \"    rec_indices = [i for i in indices[0] if i != idx][:n]\\n\",\n",
    "    \"    return data.index[rec_indices].tolist()\\n\",\n",
    "    \"\\n\",\n",
    "    \"# تجربة التوصية\\n\",\n",
    "    \"print('توصيات للمستخدم user1:', get_recommendations('user1', data))\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"outputs\": [],\n",
    "   \"source\": [\n",
    "    \"# حلقة التعلم المستمر\\n\",\n",
    "    \"for epoch in range(5):\\n\",\n",
    "    \"    print(f'--- دورة التعلم رقم {epoch+1} ---')\\n\",\n",
    "    \"    # تحديث عشوائي لتفاعل المستخدم\\n\",\n",
    "    \"    user = random.choice(users)\\n\",\n",
    "    \"    feature = random.choice(features)\\n\",\n",
    "    \"    data.loc[user, feature] += random.randint(1, 3)\\n\",\n",
    "    \"    print(f'تم تحديث تفاعل {user} مع {feature}')\\n\",\n",
    "    \"    # تحديث التوصيات\\n\",\n",
    "    \"    recs = get_recommendations(user, data)\\n\",\n",
    "    \"    print(f'توصيات جديدة لـ {user}:', recs)\\n\",\n",
    "    \"    # تسجيل heartbeat\\n\",\n",
    "    \"    print(f'Heartbeat: المستخدم {user}، الوقت {time.strftime(\\'%X\\')}')\\n\",\n",
    "    \"    time.sleep(1)  # محاكاة الانتظار بين الدورات\\n\",\n",
    "    \"\\n\",\n",
    "    \"print('\\nالبيانات النهائية:')\\n\",\n",
    "    \"display(data)\"\n",
    "   ]\n",
    "  },\n",
    "  {\n",
    "   \"cell_type\": \"code\",\n",
    "   \"execution_count\": null,\n",
    "   \"metadata\": {},\n",
    "   \"outputs\": [],\n",
    "   \"source\": [\n",
    "    \"# Chatbot تفاعلي مع سجل محادثة\\n\",\n",
    "    \"chat_history = []\\n\",\n",
    "    \"\\n\",\n",
    "    \"def chatbot_respond(user_id, message):\\n\",\n",
    "    \"    # إذا طلب المستخدم توصية\\n\",\n",
    "    \"    if 'توصية' in message or 'recommend' in message.lower():\\n\",\n",
    "    \"        recs = get_recommendations(user_id, data)\\n\",\n",
    "    \"        response = f'أفضل توصيات لك: {recs}'\\n\",\n",
    "    \"    elif 'أعلى مهارة' in message or 'top skill' in message.lower():\\n\",\n",
    "    \"        top_feat = data.loc[user_id].idxmax()\\n\",\n",
    "    \"        response = f'أعلى مهارة لديك هي: {top_feat}'\\n\",\n",
    "    \"    else:\\n\",\n",
    "    \"        response = 'أنا روبوت تعلم! يمكنك أن تطلب توصية أو أعلى مهارة لديك.'\\n\",\n",
    "    \"    chat_history.append({'user': message, 'bot': response})\\n\",\n",
    "    \"    return response\\n\",\n",
    "    \"\\n\",\n",
    "    \"# بدء محادثة تفاعلية (يمكنك تعديل user_id حسب الحاجة)\\n\",\n",
    "    \"user_id = 'user1'\\n\",\n",
    "    \"print('--- ابدأ المحادثة مع الروبوت (اكتب خروج للخروج) ---')\\n\",\n",
    "    \"while True:\\n\",\n",
    "    \"    msg = input('أنت: ')\\n\",\n",
    "    \"    if msg.strip().lower() in ['خروج', 'exit']:\\n\",\n",
    "    \"        print('تم إنهاء المحادثة.')\\n\",\n",
    "    \"        break\\n\",\n",
    "    \"    reply = chatbot_respond(user_id, msg)\\n\",\n",
    "    \"    print('الروبوت:', reply)\\n\",\n",
    "    \"\\n\",\n",
    "    \"print('--- سجل المحادثة ---')\\n\",\n",
    "    \"for turn in chat_history:\\n\",\n",
    "    \"    print('أنت:', turn['user'])\\n\",\n",
    "    \"    print('الروبوت:', turn['bot'])\\n\"\n",
    "   ]\n",
    "  }\n",
    " ],\n",
